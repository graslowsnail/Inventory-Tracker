<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<section class="vh-100">
      <div class="container-fluid">
        <div class="row"></div>
          <div class="col-sm-6 text-black">
            <div class="px-5 ms-xl-4">
            <img src="assets/fire-time.svg" width="55" alt="Fire Parts" />
            </div>
            <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
              <form style="width:23rem" class="login-form">
                <div class="form-outline mb-4">
                  <label class="form-label" for="email-login">Email:</label>
                  <input class="form-control form-control-lg" type="text" id="email-login" />
                </div>
                <div class="form-outline mb-4">
                  <label class="form-label" for="password-login">Password:</label>
                  <input class="form-control form-control-lg" type="password" id="password-login" />
                </div>
                <div class="pt-1 mb-4">
                  <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
                </div>
              </form>
            </div>

            <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
              <form style="width:23rem" class="signup-form">
                <div class="form-outline mb-4">
                  <label class="form-label" for="username-signup">Username:</label>
                  <input class="form-control form-control-lg" type="text" id="username-signup" />
                </div>
                <div class="form-outline mb-4">
                  <label class="form-label" for="email-signup">Email:</label>
                  <input class="form-control form-control-lg" type="text" id="email-signup" />
                </div>
                <div class="form-outline mb-4">
                  <label class="form-label" for="password-signup">Password:</label>
                  <input  class="form-control form-control-lg" type="password" id="password-signup" />
                </div>
                <div class="pt-1 mb-4">
                  <button class="btn btn-info btn-lg btn-block" type="submit">Sign up</button>
                </div>
              </form>
              
            </div>
              
          </div>
        </div>
      </div>
</section>
<script src="/javascript/login.js"></script>