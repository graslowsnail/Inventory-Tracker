<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>


<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">
        <div class="px-5 ms-xl-4">
            <img src="assets/fire-time.svg" width="55" alt="Fire Parts" />
            </div>
        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
          <form style="width:23rem" class="new-part-form">
            <h2 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Create New Post</h2>
            <div class="form-outline mb-4">
              <label class="form-label" for="part-title">Title</label>
              <input class="form-control form-control-lg" type="text" id="part-title" name="part-title" />
            </div>
            <div class="form-outline mb-4">
              <label class="form-label" for="part-stock">Enter the amount of stock:</label>
              <input class="form-control form-control-lg" id="part-stock" name="part-stock" />
            </div>
            <div class="pt-1 mb-4">
              <button class="btn btn-info btn-lg btn-block" type="submit" class="btn">Create</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

